@{
    ViewData["Title"] = "Grade Calculator";
}
@model gradeCalModel;


<form method="post">
    <label>Assignments:</label>
    <input id="Asg" asp-for="assignments" /><br />
    <label>Group Project:</label>
    <input id="GP" asp-for="groupProjects" /><br />
    <label>Quizzes:</label>
    <input id="Qzz" asp-for="quizzes" /><br />
    <label>Exams:</label>
    <input id="Ex" asp-for="exams" /><br />
    <label>INTEX:</label>
    <input id="ITX" asp-for="intex" /><br />
    <input id="CalBtn" type="submit" value="Calculate Grade" />

    <div asp-validation-summary="All"></div>
</form>
